{
  "manifest_version": 3,
  "name": "ScholarStream Copilot",
  "version": "1.1.0",
  "description": "Your AI assistant for scholarship and hackathon applications - auto-fill forms, AI essay help, and track applications",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "identity",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*.scholarships.com/*",
    "https://devpost.com/*",
    "https://mlh.io/*",
    "https://www.kaggle.com/*",
    "https://*.fastweb.com/*",
    "https://*.niche.com/*",
    "https://*.collegeboard.org/*",
    "https://*.gitcoin.co/*",
    "https://*.layer3.xyz/*",
    "https://*.kaggle.com/*",
    "https://scholarstream-backend.onrender.com/*",
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["copilot.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": [
      "https://scholarstream-v3.vercel.app/*",
      "http://localhost:*/*"
    ]
  }
}