{
    "manifest_version": 3,
    "name": "ScholarStream Co-Pilot",
    "version": "1.0",
    "description": "Your AI-powered scholarship and hackathon assistant.",
    "permissions": [
        "sidePanel",
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "http://localhost:8081/*",
        "https://*.scholarstream.app/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Open Co-Pilot",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}